#               [5, 6, 7, 0]]
def setGoalState1(list):
    listSize = len(list)
    newList = sorted(list)
    emptyValue = newList.pop(0)
    newList.append(emptyValue)
    goalState = [[], []]
    goalState[0] = newList[0:int(listSize / 2)]
    goalState[1] = newList[int(listSize / 2):listSize]
    # print(goalState)
    return goalState


# goalState2 = [[1, 3, 5, 7],

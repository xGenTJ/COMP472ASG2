# To flatten 2d lists when writing to final files
def flattenOutList(list):
    flatList = []
    for x in list:
        flatList.extend(x)
    print(flatList)
# example
# flattenOutState(goalState1)


def readFile(fileName):
    f = open(fileName, "r")
    puzzleList = []
    for x in f:
      y = x.strip('\n')
      y = addCommaSeperator(y)
      # print(y)
      puzzleList.append(y)
      # print(puzzleList)
    return puzzleList


def addCommaSeperator(listString):
    newList = listString.replace(' ', ',')
    # print(newList)
    return newList


# need to be changed to handle 2d lists?
def removeCommaSeperator(listString):
    newList = listString.replace(',', ' ')
    # print(newList)
    return newList


def listTo2DList(list):
    listSize = len(list)
    newList = [[],[]]
    newList[0] = list[0:int(listSize/2)]
    newList[1] = list[int(listSize/2)+1:listSize]
    # print(len(list))
    # print(newList[0])
    # print(newList[1])
    return newList


def checkGoalStates(listState):
    # condition to completed puzzle
    # print(goalState1)
    if listState == goalState1 or listState == goalState2:
        print('You have reached the goal state!')
    # continue with search algorithm
    else:
        print('Keep trying!')

